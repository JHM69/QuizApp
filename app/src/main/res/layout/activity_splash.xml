<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="?android:windowBackground"    tools:context=".Splash">    <TextView        android:id="@+id/textView9"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="Phone-book, Notices, Chat, Note, ToDo and many more"        android:textAlignment="center"        android:textColor="?customColorValue"        android:textSize="18sp"        app:layout_constraintEnd_toEndOf="@+id/textView"        app:layout_constraintStart_toStartOf="@+id/textView"        app:layout_constraintTop_toBottomOf="@+id/textView"        tools:ignore="HardcodedText" />    <ImageView        android:id="@+id/imageView7"        android:layout_width="330dp"        android:layout_height="330dp"        android:layout_marginTop="120dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:srcCompat="@drawable/bjsa_logo"        tools:ignore="ContentDescription" />    <TextView        android:id="@+id/textView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="32dp"        android:layout_marginTop="16dp"        android:layout_marginEnd="32dp"        android:text="Judges\' Platform BD"        android:textColor="?customColorValue"        android:textSize="27sp"        android:textStyle="bold"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/imageView7"        tools:ignore="HardcodedText" /></androidx.constraintlayout.widget.ConstraintLayout>